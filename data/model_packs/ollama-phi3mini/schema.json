{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["summary", "advice_short", "advice_long", "drills"],
  "additionalProperties": false,
  "properties": {
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "advice_short": {
      "type": "string",
      "minLength": 1
    },
    "advice_long": {
      "type": "string",
      "minLength": 1
    },
    "drills": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "text"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["minimal_pair", "syllable", "phrase"]
          },
          "text": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
